<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray85">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/gradientAnim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@id/textView1"
        android:layout_width="match_parent"
        android:layout_margin="32dp"
        android:padding="32dp"
        android:textColor="#FFF"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/flipper_1_text"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/next1"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/animation_button_margin"
        app:lottie_fileName="next.json"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:padding="8dp"
        android:background="@drawable/shape_flippers_next_button"/>
</RelativeLayout>