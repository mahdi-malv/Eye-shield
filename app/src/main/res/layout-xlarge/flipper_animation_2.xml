<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/flipper_2">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/sickVRAnim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="64dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/text"/>

    <ScrollView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_above="@+id/next2"
        android:layout_margin="16dp">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/flipper_2_text"
            android:textSize="25sp"
            android:textColor="@color/white"/>
    </ScrollView>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/next2"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/animation_button_margin"
        app:lottie_fileName="next.json"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:padding="8dp"
        android:background="@drawable/shape_flippers_next_button"/>
</RelativeLayout>