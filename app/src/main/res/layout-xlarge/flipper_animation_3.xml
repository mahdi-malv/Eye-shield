<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/flipper_3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/text">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/timeAnim"
            android:layout_width="380dp"
            android:layout_height="380dp"
            android:padding="32dp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_margin="16dp"
        android:layout_above="@+id/next3">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/flipper_3_text"
            android:textColor="#FFF"
            android:textSize="25sp"/>
    </ScrollView>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/next3"
        android:layout_width="180dp"
        android:layout_height="100dp"
        app:lottie_fileName="next.json"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_marginRight="@dimen/animation_button_margin2"
        android:layout_marginBottom="@dimen/animation_button_margin"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:padding="8dp"
        android:background="@drawable/shape_flippers_next_button"/>

</RelativeLayout>