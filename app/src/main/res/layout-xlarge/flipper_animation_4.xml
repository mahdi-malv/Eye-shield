<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/flipper_4">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/eyeMovingAnim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/text"
        android:layout_margin="64dp"
        android:padding="16dp"/>

    <ScrollView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:text="@string/flipper_4_text"
        android:layout_margin="32dp"
        android:layout_above="@+id/gotIt"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/flipper_4_text"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textSize="25sp"/>
    </ScrollView>

    <!--Enter main button-->
    <Button
        android:id="@+id/gotIt"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:background="@drawable/shape_flipper_4"
        android:text="@string/got_it"
        android:textColor="#FFF"
        android:gravity="center"
        android:textSize="21sp"
        android:textStyle="bold"
        android:typeface="monospace"
        android:textAllCaps="false"
        android:layout_marginBottom="@dimen/animation_button_margin"
        android:layout_marginRight="@dimen/animation_button_margin2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>