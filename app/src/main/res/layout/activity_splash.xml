<?xml version="1.0" encoding="utf-8"?><!-- File created by SkillsOn -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/bg1_blur">

    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/icon"
        android:layout_gravity="center"
        tools:ignore="contentDescription"
        android:layout_margin="@dimen/_42sdp"
        android:layout_weight="0.65"/>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:lottie_fileName="drop_loading.json"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        android:layout_weight="0.15"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="vertical"
        android:weightSum="100">
        <TextView
            android:id="@+id/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="4dp"
            android:text="@string/app_name"
            android:textColor="#FFF"
            android:textSize="@dimen/_20sdp"
            android:layout_weight="50"/>

        <TextView
            android:id="@+id/appVersion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/version"
            android:textColor="#d7ccc8"
            android:textSize="@dimen/_15sdp"
            android:layout_weight="25"/>

        <TextView
            android:id="@+id/yearOfProduction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/year"
            android:textSize="@dimen/_15sdp"
            android:textColor="#e0e0e0"
            android:layout_weight="25"/>
    </LinearLayout>
</LinearLayout>